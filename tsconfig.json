{
  "baseUrl": "./src",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"]
  },
  "paths": {
    "~/*": "src/*"
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.vue"]
}
